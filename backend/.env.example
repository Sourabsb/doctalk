# ===================================
# DocTalk Backend Environment Variables
# ===================================
# Copy this file to .env and fill in your values

# ----- Azure Vision (for OCR / Document Processing) -----
AZURE_VISION_ENDPOINT=your_azure_vision_endpoint
AZURE_VISION_KEY=your_azure_vision_key

# ----- LLM API Keys -----
# Gemini API (for cloud mode)
GEMINI_API_KEY=your_gemini_api_key

# Groq API (alternative cloud provider)
GROK_API_KEY=your_groq_api_key

# ----- JWT Authentication -----
JWT_SECRET=your-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ----- Database -----
# Leave empty to use default SQLite (app.db in project root)
# For PostgreSQL: postgresql://user:password@localhost:5432/doctalk
DATABASE_URL=

# ----- LLM Mode -----
# Options: "api" (cloud) or "local" (Ollama)
# Default: "api" if GEMINI_API_KEY is set, otherwise "local"
DEFAULT_LLM_MODE=api

# ----- Groq Configuration -----
GROQ_MODEL=groq/compound

# ----- Ollama Configuration (for local mode) -----
OLLAMA_MODEL=llama3:8b-instruct-q4_K_M
OLLAMA_HOST=http://127.0.0.1:11434
OLLAMA_CONTEXT_LENGTH=4096

# ----- Qdrant Vector Database -----
# Default runs locally via Docker: docker run -p 6333:6333 qdrant/qdrant
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=doctalk_chunks

# ----- Embedding Model -----
# Using sentence-transformers model (runs locally)
EMBEDDING_MODEL=all-MiniLM-L6-v2
